<div class="container mt-5">
  <h3><%= t('.main_title') %></h3>

  <h4 class="mt-5 striped-subtitle"><%= t('.social_title') %></h4>
  <div class="row my-md-4">
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= link_to events_path, class:"card shadow-sm dashboard-card-lnk" do %>
        <div class="card-body">
          <h4 class="card-title"><i class="fas fa-users"></i> <%= t('.events_card_title') %></h4>
          <p class="card-text"><%= t('.events_card_subtitle') %></p>
        </div>
      <% end  %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= link_to talents_path, class:"card shadow-sm dashboard-card-lnk" do %>
        <div class="card-body">
          <h4 class="card-title"><i class="fas fa-diagnoses"></i> <%= t('.talent_teach_card_title') %></h4>
          <p class="card-text"><%= t('.talent_teach_card_subtitle') %></p>
        </div>
      <% end %>
    </div>
  </div>

  <% if current_user.local? %>
  <h4 class="mt-2 striped-subtitle"><%= t('.work_title') %></h4>
  <div class="row my-md-4">
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= link_to networks_path, class:"card shadow-sm dashboard-card-lnk" do %>
        <div class="card-body">
          <h4 class="card-title"><i class="fas fa-globe"></i> <%= t('.network_card_title') %></h4>
          <p class="card-text"><%= t('.network_card_subtitle') %></p>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
  
  <h4 class="mt-2 striped-subtitle"><%= t('.donate_title') %></h4>

  <div class="row my-md-4">
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= link_to pages_path("donate"), class:"card shadow-sm dashboard-card-lnk" do %>
        <div class="card-body">
          <h4 class="card-title"><i class="fas fa-hand-holding-usd"></i> <%= t('.donate_card_title') %></h4>
          <p class="card-text"><%= t('.donate_card_subtitle') %></p>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= link_to pages_path("partner"), class:"card shadow-sm dashboard-card-lnk" do %>
        <div class="card-body">
          <h4 class="card-title"><i class="fas fa-handshake"></i> <%= t('.partner_card_title') %></h4>
          <p class="card-text"><%= t('.partner_card_subtitle') %></p>
        </div>
      <% end %>
    </div>
  </div>

</div>
