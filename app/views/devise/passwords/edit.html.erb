<div class="text-center mt-5">
  <h2><%= t('.header')%></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: "form-auth detached-input"}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control", placeholder: t('.pass_placeholder') %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:t('.pass_conf_placeholder') %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
      <br />
      <%= f.submit t('.btn_submit'), class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
