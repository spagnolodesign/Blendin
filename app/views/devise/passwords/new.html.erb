
<div class="text-center mt-5">
<h2><%= t('.header')%></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-auth detached-input" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:t('.email_placeholder')  %>
  <%= f.submit t('.btn_submit'), class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
</div>
