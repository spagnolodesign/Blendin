<section class="Auth clearfix flex items-center">
  <div class="sm-col-6 lg-col-3 mx-auto">
    <%= render "devise/shared/headline" %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, class:"Input", placeholder: t('.email_placeholder') %>
      <%= f.password_field :password, autocomplete: "off", class:"Input", placeholder: t('.pass_placeholder') %>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t('.btn_submit'), class: "Button center" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
