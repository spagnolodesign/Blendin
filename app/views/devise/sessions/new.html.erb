<div class="container grid-960">
  <div class="columns">
    <div class="column col-5 centered empty">
      <%= link_to root_path do %>
        <%=  image_tag("logo-app.png", class: "logo-login")  %> 
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: false) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label"  %>
          <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "Sign in", class: "btn btn-primary btn-lg" %>
        </div>

      <% end %>
      <br>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>