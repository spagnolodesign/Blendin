<div class="text-center mt-5">
  <h2>Please sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-auth"}) do |f| %>

    <%= render "devise/shared/fb_btn" %>

    <p class="text-uppercase">OR</p>

    <%= devise_error_messages! %>

    <label for="inputEmail" class="sr-only"><%= t('.email_placeholder') %></label>
    <%= f.email_field :email, autofocus: true, class:"form-control", id: "inputEmail", placeholder: t('.email_placeholder'), required: true %>

    <label for="inputPassword" class="sr-only"><%= t('.pass_placeholder') %></label>
    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder: t('.pass_placeholder'), required: true%>

    <% if devise_mapping.rememberable? -%>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
    <% end -%>

    <%= f.submit t('.btn_submit'), class: "btn btn-lg btn-primary btn-block" %>
    <p class="mt-5 mb-3 text-muted">Â© 2017-2018</p>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
