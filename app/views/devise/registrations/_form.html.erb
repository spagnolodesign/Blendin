<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: false, :html => {:class => 'form-horizontal' })  do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Full name", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off",placeholder: "Password", class: "form-input" %>
  </div>
  <div class="form-group form-radio-btn">
      <%= f.radio_button :local, true, :checked => false %>
      <%= f.label :local, 'Local', :value => true, class: "left" %>
      <%= f.radio_button :local, false, :checked => false %> 
      <%= f.label :local, 'New comer', :value => false, class: "right" %>
  </div>
  <p class="terms-text">By clicking Sign Up, you agree to our <a href="">Terms</a> and that you have read our <a href="">Data Policy</a>.</p>
  <div class="form-group float-right" data-no-turbolink>
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
  </div>
  <div class="clearfix"></div>
<% end %>
