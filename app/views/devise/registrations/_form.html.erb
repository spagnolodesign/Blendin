
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: false) do |f| %>
 
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-input input-lg" %>
  </div>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Full name", class: "form-input input-lg" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off",placeholder: "Password", class: "form-input input-lg" %>
  </div>

  <span class="btn-link tooltip" data-tooltip="<%= raw t ('sign.info') %>"><%= raw t ('sign.areyou') %></span>
  
  <div class="form-group form-radio-btn clearfix">
    <%= f.radio_button :local, true, :checked => false, :class => "for_local" %>
    <%= f.label :local, 'Local', :value => true, class: "left" %>
    <%= f.radio_button :local, false, :checked => false, :class => "for_new" %> 
    <%= f.label :local, 'New in NL', :value => false, class: "right" %>
  </div>

  <p class="terms-text">
    <%= raw t("sign.policy", :href_cookie => link_to(t("sign.cookie_href"), 'https://www.iubenda.com/privacy-policy/7951305/cookie-policy'), :href_policy => link_to(t("sign.data_href"), 'https://www.iubenda.com/privacy-policy/7951305'),
    :href_terms => link_to(t("sign.data_terms"), '/docs/Terms_and_conditions_Blendin.docx')) %>
  </p>
  <div class="form-group" data-no-turbolink>
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>

<script type="text/javascript" language="JavaScript">
  document.querySelector("#new_user").addEventListener("submit", function(e){
    var a = document.getElementsByClassName('for_local')[0].checked;
    var b = document.getElementsByClassName('for_new')[0].checked;
    if(!a && !b) {
      e.preventDefault();
      return alert('Please fill all the fileds in the form.');
    }else{
      return false;
    }
  });
</script> 