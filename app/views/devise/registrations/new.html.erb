<section class="Auth clearfix flex items-center">
  <div class="sm-col-6 lg-col-3 mx-auto">
    <%= render "devise/shared/headline" %>
    <div class="center">
      <a class="loginBtn loginBtn--facebook" href="/users/auth/facebook"><%= t('devise.shared.links.sign_in_with_provider', provider: "Facebook") %></a><br>
    </div>

    <div class="divider">OR</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: t('.email_placeholder'), class:"Input" %>
      <%= f.text_field :username, placeholder: t('.name_placeholder'), class:"Input" %>
      <%= f.password_field :password, placeholder: t('.pass_placeholder'), autocomplete: "off", class:"Input" %>

      <label class="Label CheckBox">
        <%= f.check_box(:terms_and_conditions )%> <%= t('.terms_and_conditions') %> <a href="//www.iubenda.com/privacy-policy/7951305" class="no-brand" title="Privacy Policy" target="_blank"><%= t('.privacy_policy') %></a>
      </label>

      <div class="actions">
        <%= f.submit t('.btn_submit'), class: "Button center"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>

<script type="text/javascript">(function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src = "//cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; if(w.addEventListener){w.addEventListener("load", loader, false);}else if(w.attachEvent){w.attachEvent("onload", loader);}else{w.onload = loader;}})(window, document);</script>
