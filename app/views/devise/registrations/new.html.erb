<div class="text-center mt-5">
  <h2>Create an account</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-auth"}) do |f| %>

    <%= render "devise/shared/fb_btn" %>

    <p class="text-uppercase">OR</p>

    <%= devise_error_messages! %>
    <%= f.email_field :email, autofocus: true, placeholder: t('.email_placeholder'), class:"form-control" %>
    <%= f.text_field :username, placeholder: t('.name_placeholder'), class:"form-control" %>
    <%= f.password_field :password, placeholder: t('.pass_placeholder'), autocomplete: "off", class:"form-control" %>

    <div class="checkbox mb-3">
      <label>
        <%= f.check_box(:terms_and_conditions)%> <span class="text-muted"><%= t('.terms_and_conditions') %> <a href="//www.iubenda.com/privacy-policy/7951305" class="no-brand" title="Privacy Policy" target="_blank"><%= t('.privacy_policy') %></a></span>
      </label>
    </div>

    <%= f.submit t('.btn_submit'), class: "btn btn-lg btn-primary btn-block"  %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
