<section class="Auth clearfix flex items-center">
  <div class="sm-col-6 lg-col-3 mx-auto">
    <%= render "devise/shared/headline" %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"Input" %>
      <%= f.text_field :username, placeholder: "Full name", class:"Input" %>
      <%= f.password_field :password, placeholder: "Password (min 6char)", autocomplete: "off", class:"Input" %>

      <label class="Label CheckBox">
        <%= f.check_box(:terms_and_conditions )%> I have read and agree with the <a href="//www.iubenda.com/privacy-policy/7951305" class="no-brand" title="Privacy Policy" target="_blank">Privacy Policy</a>
      </label>

      <div class="actions">
        <%= f.submit "Sign up", class: "Button center"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>

<script type="text/javascript">(function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src = "//cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; if(w.addEventListener){w.addEventListener("load", loader, false);}else if(w.attachEvent){w.attachEvent("onload", loader);}else{w.onload = loader;}})(window, document);</script>
