<section class="Auth clearfix mt4 mxn2 py2 px2">
  <div class="sm-col-6 lg-col-3 mx-auto">
    <%= render "devise/shared/headline" %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"Input" %>
      <%= f.text_field :username, placeholder: "Full name", class:"Input" %>
      <%= f.password_field :password, placeholder: "Password (min 6char)", autocomplete: "off", class:"Input" %>

      <label class="Label CheckBox">
        <%= f.check_box(:terms_and_conditions )%> I read and agree the <a href="">Terms & Condition</a>
      </label>

      <div class="actions">
        <%= f.submit "Sign up", class: "Button CenterAling"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
