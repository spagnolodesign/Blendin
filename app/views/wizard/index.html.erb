<section class="EditProfile clearfix">
  <div class="sm-col-6 lg-col-6 mx-auto">
    <h3>Hello <%= @user.name %>, in order to make you blend with the community we need some info to verify your persona. Start compleate your profile.</h3>
    <%= form_for(@user, html: {id:'wizard-form-js'}) do |f| %>

      <label class="Label">Please select an option:</label>

      <label class="Label CheckBoxRound">
        <input value="true" name="user[local]"  id="local-radio" type="radio" class="css-checkbox" required />
        I'm a local
      </label>

      <label class="Label CheckBoxRound">
        <input value="false" name="user[local]"  id="local-radio" type="radio" class="css-checkbox" required />
        I'm not a local (expats)
      </label>

      <label class="Label">ðŸ’¬ Tell more about you and what you like. </label>
      <%= f.text_area :about, class:"Input" %>

      <label class="Label">ðŸŒ‡ Where do you live?</label>
      <%= f.text_field :full_street_address, class:"Input AddressField", required: true %>
      <i>(we need your current password to confirm your changes)</i>

      <label class="Label">ðŸ“± Phone number</label>
      <%= f.text_field :phone, required: 'true', class: "Input", required: true %>
      <i>(Possibly the one you have whatsapp on)</i>

      <label class="Label">ðŸ’ª Job</label>
      <%= f.text_field :job, class: "Input", required: true %>

      <label class="Label">ðŸŽ‚ Date of Birth</label>
      <%= f.date_select :birthday, {start_year: 1960, end_year: 2000}, { class: 'Input Select' , required: true} %>

      <label class="Label">Country of origin</label>
      <%= f.text_field :country, id:"country-js", class:"Input AddressField", required: true %>

      <label class="Label">ðŸ“™ Choose some interest from the list </label>
      <select name="user[tag_list][]" id="taglist-js"  multiple required>
        <% @user.tag_list.each do |tag| %>
          <option value="<%= tag %>" selected><%= tag %></option>
        <% end %>
      </select>

      <%= f.submit "Update", class:"Button" %>

    <% end %>
  </div>
</section>



