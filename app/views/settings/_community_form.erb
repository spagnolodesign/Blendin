<div class="row">
  <div class="col mb-3">
    <p><%= t('.info') %></p>
  </div>
</div>

<%= form_for(@user) do |f| %>
  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right"><%= t('.local_label') %></label>
    <div class="col-lg-9">
      <%= f.select :local, {}, { prompt: "Please select an option" }, { class:"custom-select custom-width-select", required: true } do %>
        <%= options_for_select([[t('.im_local'), true], [t('.im_newcomer'), false]], @user.local) %>
      <% end %>
    </div>
  </div>
  <div class="float-lg-right">
    <%= f.submit 'Save', class: "btn btn-primary"  %>
  </div>
<% end %>

<script src="https://cdn.jsdelivr.net/places.js/1/places.min.js"></script>

<script>

$(function () {
  var placesAutocomplete = places({
    container: document.querySelector('.location-input-form'),
    type: 'city',
    aroundLatLngViaIP: false,
    templates: {
      value: function(suggestion) {
        return suggestion.name;
      }
    }
  });
});
</script>
