<%= form_for(@user) do |f| %>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">Naam <sup>*</sup></label>
    <div class="col-lg-9">
      <%= f.text_field :username, class:"form-control", required: true, placeholder: t('.username_label') %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">Email <sup>*</sup></label>
    <div class="col-lg-9">
      <%= f.email_field :email, class:"form-control" %>
      <small class="form-text text-muted">We zullen nooit uw gegevens delen met andere.</small>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right"><%= t('.gender_label') %></label>
    <div class="col-lg-9">
      <%= f.select :gender, {}, { prompt: "Geslacht" }, { class:"custom-select custom-width-select", required: true } do %>
        <%= options_for_select([[t('.gender_male'), "m"], [t('.gender_female'), "f"]], @user.gender) %>
      <% end %>
    </div>
  </div>


  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">
      <%= t('.birthday_label') %> <sup>*</sup>
    </label>
    <div class="col-lg-9">
      <%= f.date_select :birthday, {start_year: 1960, end_year: 2000, :order => [:day, :month, :year], prompt: true}, { class:"custom-select custom-width-select" , required: true } %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">
      <%= t('.address_label') %> <sup>*</sup>
    </label>
    <div class="col-lg-9">
      <%= f.text_field :full_street_address, class:"form-control location-input-form", required: true, placeholder: t('.address_placeholder') %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">
      <%= t('.local_label') %> <sup>*</sup>
    </label>
    <div class="col-lg-9">
    <%= f.select :local, {}, { prompt: "Please select an option" }, { class:"custom-select custom-width-select", required: true } do %>
      <%= options_for_select([[t('.im_local'), true], [t('.im_newcomer'), false]], @user.local) %>
    <% end %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">
      <%= t('.job_label') %>
    </label>
    <div class="col-lg-9">
      <%= f.text_field :job, class: "form-control", placeholder:t('.job_placeholder') %>
      <small class="form-text text-muted"><%= t('.job_helper') %> </small>
    </div>
  </div>


  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">
      <%= t('.phone_label') %>
    </label>
    <div class="col-lg-9">
      <%= f.text_field :phone, required: 'true', class: "form-control", required: true, placeholder: t('.phone_placeholder') %>
      <small class="form-text text-muted"><%= t('.phone_helper') %></small>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label text-lg-right">
      <%= t('.about_label') %>
    </label>
    <div class="col-lg-9">
      <%= f.text_area :about, class:"form-control" %>
      <small class="form-text text-muted"><%= t('.about_helper').html_safe %></small>
    </div>
  </div>


  <div class="float-lg-right">
    <%= f.submit 'Opslaan', class: "btn btn-primary"  %>
  </div>
<% end %>

<script src="https://cdn.jsdelivr.net/places.js/1/places.min.js"></script>

<script>

$(function () {
  var placesAutocomplete = places({
    container: document.querySelector('.location-input-form'),
    type: 'city',
    aroundLatLngViaIP: false,
    templates: {
      value: function(suggestion) {
        return suggestion.name;
      }
    }
  });
});
</script>
