<!DOCTYPE html>
<html>
  <head>
    <title>Blendin</title>
    <meta name="description" content="Berry helps you to connect with people that share your same interests :)">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' name='viewport' />
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  <div class="be-wrapper">

  <nav class="navbar navbar-default navbar-fixed-top be-top-header">
    <div class="container-fluid">
      <div class="navbar-header">
       <%= link_to "", admin_dashboard_index_path, class:"navbar-brand" %>
      </div>
      <div class="be-right-navbar">
        <ul class="nav navbar-nav navbar-right be-user-nav">
          <li class="dropdown">
            <a href="#" data-toggle="dropdown" role="button" aria-expanded="false" class="dropdown-toggle"><img src="<%= current_user.picture.small_avatar %>">
              <span class="user-name"><%= current_user.name %></span>
            </a>
            <ul role="menu" class="dropdown-menu">
              <li>
                <div class="user-info">
                  <div class="user-name"><%= current_user.name %></div>
                  <div class="user-position online">Available</div>
                </div>
              </li>
              <li>
                <%= link_to(root_path) do %>
                    <span class="icon mdi mdi-home"></span>
                    App
                <% end %>
              </li>
              <li>
                <%= link_to(edit_user_path(current_user)) do %>
                    <span class="icon mdi mdi-settings"></span>
                    <%= t('nav.settings') %>
                <% end %>
              </li>
              <li>
                  <%= link_to(destroy_user_session_path, :method => :delete) do %>
                    <span class="icon mdi mdi-power"></span>
                    <%= t('nav.signout') %>
                  <% end %>
              </li>
            </ul>
          </li>
        </ul>
        <div class="page-title"><span>Admin</span></div>
      </div>
    </div>
  </nav>
  <div class="be-left-sidebar">
    <div class="left-sidebar-wrapper"><span class="left-sidebar-toggle">Blank Page</span>
      <div class="left-sidebar-spacer">
        <div class="left-sidebar-scroll">
          <div class="left-sidebar-content" data-turbolinks="false">
            <ul class="sidebar-elements">
              <li class="divider">Menu</li>
              <li class="parent"><a href=""><i class="icon mdi mdi-home"></i><span>Home</span></a>
                <ul class="sub-menu">
                  <li>
                    <%= link_to "Dashboard", admin_dashboard_index_path, data: { no_turbolink: false } %>
                  </li>
                  <li>
                    <%= link_to "Accounts", admin_account_index_path, data: { no_turbolink: false } %>
                  </li>
                  <li>
                    <%= link_to "Blend requests", admin_blend_index_path, data: { no_turbolink: false } %>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="be-content">
    <div class="page-head">
      <%= yield :title_page %>
    </div>
    <div class="main-content container-fluid">
    <%= yield %>
    </div>
  </div>
</div>

  </body>

</html>
