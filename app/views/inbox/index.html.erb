<div class="container mt-5">
  <h2>Inbox</h2>
  <p>Unread messages: <%= @messages_unread_count %></p>

  <div class="my-3 p-3 bg-white rounded box-shadow">
    <h5 class="border-bottom border-gray pb-2 mb-0">Last messages:</h5>
    <% @conversations.each_with_index do |conversation, i| %>

      <%= link_to inbox_path(conversation) do %>

      <div class="media text-muted pt-3">
        <img class="mr-2 rounded-circle" style="width: 50px; height: 50px;" src="<%= conversation.last_sender.avatar.small_avatar %>" data-holder-rendered="true">

        <div class="media-body pb-3 mb-0 lh-125 border-bottom border-gray">
          <div class="d-flex justify-content-between align-items-center w-100">
            <strong class="text-gray-dark"><%= conversation.last_sender.name %> | <%= conversation.subject %></strong>
            <span class="small">
              <%=  time_ago_in_words(conversation.updated_at) %><br />
            </span>
          </div>
          <span class="d-block d-flex justify-content-between align-items-center w-100">
            <%= conversation.last_message.body %>
          </span>
        </div>
      </div>

      <% end %>
    <% end %>
  </div>
</div>
