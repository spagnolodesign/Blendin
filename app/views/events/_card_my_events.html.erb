<div class="col-sm-3">
  <div class="b-card">
    <%= link_to event_path(event.id) do %>
      <div class="b-image-cover b-small-image-cover" style="background-image: url(<%= event.photo %>)"></div>
    <% end %>
    <div class="b-topic-label"><%= event.topic %></div>
    <h2 class="b-title"><%= event.name %></h2>
    <div class="tagline tagline-promo-40"><%= event.date.strftime("%A, %e %b")%> - <%= event.time.strftime("%H:%M")%></div>
    <div>
      <%= link_to "See more", event_path(event.id) %>
      | <a class="unsuscribe-button mt-3" href="#" data-toggle="modal" data-target="#manage_subscriptions" data-value="<%= current_user.partecipation_id(event) %>"> <%=  t('events._card_my_event.cantattend')%></a>
    </div>
  </div>
</div>
