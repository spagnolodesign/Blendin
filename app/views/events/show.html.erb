<section class="bg-white position-sticky sticky-top">
  <div class="container py-3">
    <div class="row">
      <div class="col-md-8">
        <p class="font-weight-light mb-1"><%= @event.date.strftime("%A, %e %b %Y")%> - <%= @event.time.strftime("%H:%M")%></p>
        <h1><%= @event.name %></h1>
      </div>
      <div class="col-md-4">
        <% if user_signed_in? && @event.is_available_for_user?(current_user) && !current_user.is_partecipant?(@event)  %>
          <p class="font-weight-bold mb-2">Are you going? <span class="font-weight-normal"><%= render "events/components/capacity", event: @event %></span></p>
          <button class="btn btn-block btn-lg btn-primary confirm-button" type="button" name="button" data-toggle="modal" data-target="#manage_subscriptions" data-value ="<%= @event.id %>"><%=  t('events.actions.attend')%></button>
        <% elsif current_user.is_partecipant?(@event) %>
          <h3 class="mt-3 text-center">ðŸŽ‰ðŸŽ‰ You are in! ðŸŽ‰ðŸŽ‰</h3>
        <% else %>
          <%= render "events/components/full_capacity" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-7">
      <figure class="figure">
        <%= image_tag @event.photo.event_detail, class: "figure-img img-fluid rounded", alt: @event.name %>
        <figcaption class="figure-caption">Picture for the event</figcaption>
      </figure>
      <p><%= @event.description %></p>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <%= render 'events/components/participants', event: @event %>
      <%= render 'events/components/map' %>
    </div>
  </div>
</div>


<div class="modal fade" id="manage_subscriptions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button id="close-modal" type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="modal-body" class="modal-body"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  generateSubscriptionModal();
</script>

<script type="text/javascript">
  var lat = "<%= @event.latitude %>"
  var lng = "<%= @event.longitude %>"
  console.log(lat);
  var mymap = L.map('mapid').setView([lat, lng], 13);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 18,
    id: 'mapbox.streets',
    accessToken: 'your.mapbox.access.token'
  }).addTo(mymap);
  var marker = L.marker([lat, lng]).addTo(mymap);
</script>
