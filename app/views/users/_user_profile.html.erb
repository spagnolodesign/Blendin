<div class="columns profile">
	<div class="column col-12">
		<div class="clearfix">
	    <img class="rounded user-avatar" src="<%= @user.avatar.large_avatar %>">
			<h3 class="username"><%= @user.username %></h3>
			<span class="location"><%= @user.full_street_address %></span>
		</div>
	</div>
	<div class="column col-12">
		<p class="title-line"><%= t('default.interests') %></p>
    <%= render partial: "tags/list", locals: {tags: @user.tag_list} %>
		<b>About:</b>
		<p><%= @user.about %></p>
		<b>Job:</b>
		<p><%= @user.job %></p>
		<b>Age:</b>
		<p><%= @user.age %></p>
		<b>Languages:</b>
		<p><%= @user.languages %></p>
		<b>Country:</b>
		<p><%= @user.country_name %></p>
		<%= link_to t('btn.noc'), chat_rooms_path(user: @user.id), class:"btn btn-primary btn-lg block" %>

	</div>
</div>
