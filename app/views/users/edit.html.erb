<div class="columns">
<div class="column col-6 centered">
	    <%= form_for(@user, :html => {:class => 'form-horizontal' }) do |f| %>
	    		<% if @user.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

				      <ul>
				      <% @user.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>
	        <div class="form-group">
	            <div class="col-sm-3">
	            		<%= f.label :username, class: "form-label" %>
	            </div>
	            <div class="col-sm-9">
	                <%= f.text_field :username, class: "form-input" %>
	            </div>
	        </div>
	        <div class="form-group">
	            <div class="col-sm-3">
	                <%= f.label :email, class: "form-label" %>
	            </div>
	            <div class="col-sm-9">
	                <%= f.text_field :email, class: "form-input" %>
	            </div>
	        </div>
	        <div class="form-group">
	            <div class="col-sm-3">
	                <%= f.label :gender, class: "form-label" %>
	            </div>
	            <div class="col-sm-9">
	                <label class="form-radio">
                 		<%= f.radio_button :gender, 'm' %> 
		  							<i class="form-icon"></i>
		  							<%= f.label :gender, 'Male', :value => 'm' %>
		  						</label>
		  						<label class="form-radio">
                 		<%= f.radio_button :gender, 'f' %> 
		  							<i class="form-icon"></i>
		  							<%= f.label :gender, 'Female', :value => 'f' %>
		  						</label>
	            </div>
	        </div>
	        <div class="form-group">
	            <div class="col-sm-3">
	                <%= f.label :about, class: "form-label" %>
	            </div>
	            <div class="col-sm-9">
	          			<%= f.text_area :about, :maxlength => 512, :size => 100, placeholder: "Write here something you would like to do in your life.", class:"form-input" %>
	            </div>
	        </div>
          <div class="form-group">
        			<div class="col-sm-3">
    						<label>UPLOAD PICTURE:</label>
	            </div>
	            <div class="col-sm-9">
	          			<%= f.file_field :avatar, class: "form-input" %>
	            </div>
					</div>
	        <div class="form-group">
	            <div class="col-sm-3"></div>
	            <div class="col-sm-9">
	             		<%= f.submit "Confirm", class: "btn btn-primary float-right" %>
	                <button class="btn btn-link float-right" type="reset">Cancel</button>
	            </div>
	        </div>
	    <% end %>
	</div>
</div>

