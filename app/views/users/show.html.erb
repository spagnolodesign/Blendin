<div class="Profile">
  <div class="sm-col-8 px2 mx-auto clearfix">
		<div class="sm-col sm-col-4">

      <img src="<%= @user.avatar.medium_avatar.url %>" class="rounded avatar" />
      <div class="clearfix">
        <% if @blend %>
          <% if @blend[:status] === "SENT" %>
            <%= render 'blend/actions' %>
          <% elsif @blend[:status] === "RECIVED" %>
            <%= render 'blend/actions' %>
          <% end %>
        <% else %>
          <a href="#modal-1" data-modal-open class="Button BlendBtn">Blend</a>
        <% end %>
      </div>
    </div>
		<div class="sm-col sm-col-8 px2">
      <div class="ProfileInfo">
        <h2>I'm <%= @user.name.capitalize %></h2>
        <p><%= @user.job.capitalize %></p>
        <p class><%= @user.age %> years old.</p>
					<% if @user.local %>
						<span class="label-local">LOCAL</span>
					<% else %>
						<span class="label-local">NEW COMER</span>
					<% end %>
      </div>

      <section class="Detail">
        <h3>My study:</h3>
        <p><%= @user.education %></p>
      </section>

      <section class="Detail">
        <h3>I like:</h3>
      </section>

			<section class="Detail">
				<h3>I Speak:</h3>
				<p><%= @user.languages %></p>
			</section>

      <section class="Detail">
        <h3>About me:</h3>
        <p><%= @user.about %></p>
      </section>

    </div>
	</div>
</div>

<div id="modal-1" class="modal-hider">
  <h1>Make your BLEND now.</h1>
  <p>Say hello to <b><%= @user.name.capitalize %></b> and introduce yourself with some words.</p>
  <%= form_for @newblend do |f| %>
    <%= hidden_field_tag(:recipient_id, @user.id) %>
    <%= f.text_area :message, class:"Input", placeholder:"ðŸ˜ƒ Hello I'm ..", required:true %>
    <%= f.submit "Send", class:"Button" %>
  <% end %>
</div>

